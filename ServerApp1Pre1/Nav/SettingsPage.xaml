<Page x:Class="ServerApp1Pre1.Nav.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServerApp1Pre1.Nav"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="SettingsPage"
      Background="White">

    <!-- Página de configuración (UI básica, funcionalidad futura) -->
    <Grid Margin="20">
        <!-- Encabezado de la página -->
        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Top" 
                    Margin="0,0,0,20">
            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
            <TextBlock Text="Configuración"
                       FontSize="32"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Foreground="#323130"/>
        </StackPanel>

        <!-- Contenido central (placeholder) -->
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <!-- Contenedor visual decorativo -->
            <Border Width="200" Height="200"
                    Background="#F9F9F9"
                    CornerRadius="100"
                    BorderBrush="#0078D4"
                    BorderThickness="5"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="16" ShadowDepth="4" Direction="315"/>
                </Border.Effect>
                
                <!-- Iconos decorativos superpuestos -->
                <Grid>
                    <TextBlock Text="&#xEA8C;" 
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="120" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="#0078D4"/>
                    <TextBlock Text="&#xE77B;" 
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="120" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="#605E5C"/>
                </Grid>
            </Border>
            
            <!-- Texto principal -->
            <TextBlock Text="Próximamente..."
                       FontSize="48"
                       FontWeight="Light"
                       HorizontalAlignment="Center"
                       Foreground="#323130"
                       Margin="0,0,0,12"/>
            
            <!-- Texto descriptivo -->
            <TextBlock Text="La página de configuración estará disponible en una futura actualización."
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Foreground="#605E5C"
                       TextWrapping="Wrap"
                       MaxWidth="400"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
