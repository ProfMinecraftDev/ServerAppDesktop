<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ServerAppDesktop.Bedrock.Pages.FilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ServerAppDesktop.Bedrock.Pages"
    xmlns:converters="using:ServerAppDesktop.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Grid.Row="0" Grid.Column="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <FontIcon Glyph="&#xEC7A;" FontSize="50" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                <TextBlock Text="En desarrollo..." Style="{ThemeResource TitleTextBlockStyle}" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="0" 
                    VerticalAlignment="Top" Padding="16,12">
                <FontIcon Glyph="&#xE8B7;" FontWeight="SemiBold" FontSize="28"/>
                <TextBlock Text="Archivos del Servidor" TextWrapping="Wrap" Style="{ThemeResource TitleTextBlockStyle}" />
            </StackPanel>

            <!-- Action Buttons -->
            <Border Grid.Row="1" Padding="16" Margin="16,16,16,0" CornerRadius="10,10,0,0" BorderThickness="0,0,0,1" Background="{ThemeResource CardBackgroundFillColorDefault}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Spacing="12">
                    <Button x:Name="RefreshButton" Style="{ThemeResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                            <TextBlock Text="Actualizar" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="OpenFolderButton">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8DA;" FontSize="16"/>
                            <TextBlock Text="Abrir Carpeta" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="CreateBackupButton">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE896;" FontSize="16"/>
                            <TextBlock Text="Crear Backup" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Files List -->
            <Border Grid.Row="2" Padding="16" CornerRadius="0,0,10,10" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Margin="16,0,16,16">
                <Grid>
                    <ListView x:Name="FilesListView" 
                         SelectionMode="Single"
                         IsItemClickEnabled="False">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" 
                                    Padding="12,8" 
                                    CornerRadius="4" 
                                    BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" 
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <TextBlock Grid.Column="0" 
                                               Text="{Binding Icon}" 
                                               FontSize="20" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,12,0" />

                                        <!-- File Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                   Style="{ThemeResource BaseTextBlockStyle}" 
                                                   FontWeight="{Binding IsImportant, Converter={StaticResource BoolToFontWeightConverter}}" />
                                            <TextBlock Text="{Binding FullPath}" 
                                                   Style="{ThemeResource CaptionTextBlockStyle}" 
                                                   Opacity="0.7" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   MaxWidth="400" />
                                        </StackPanel>

                                        <!-- File Size -->
                                        <TextBlock Grid.Column="2" 
                                               Text="{Binding DisplaySize}" 
                                               Style="{ThemeResource CaptionTextBlockStyle}" 
                                               VerticalAlignment="Center" 
                                               Margin="8,0,16,0" 
                                               Opacity="0.8" />

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="3" 
                                                Orientation="Horizontal" 
                                                Spacing="4" 
                                                VerticalAlignment="Center">

                                            <!-- Edit Button for Editable Files -->
                                            <Button Style="{ThemeResource AccentButtonStyle}" 
                                                Padding="8,6" >
                                                <FontIcon Glyph="&#xE70F;" FontSize="14" />
                                                <ToolTipService.ToolTip>
                                                    <TextBlock Text="Editar archivo" />
                                                </ToolTipService.ToolTip>
                                            </Button>

                                            <!-- Important Badge -->
                                            <Border VerticalAlignment="Center" Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                                CornerRadius="10" 
                                                Padding="6,8" >
                                                <TextBlock Text="Importante" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}" 
                                                       Foreground="{ThemeResource SolidBackgroundFillColorBaseAltBrush}" 
                                                       FontSize="10" />
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,1" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyStatePanel" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Spacing="16" 
                            Visibility="Collapsed">
                        <FontIcon Glyph="&#xE8B7;" FontSize="48" Opacity="0.5" />
                        <TextBlock Text="No se encontraron archivos" 
                               Style="{ThemeResource SubtitleTextBlockStyle}" 
                               Opacity="0.7" 
                               HorizontalAlignment="Center" />
                        <TextBlock Text="Verifique que la configuraciÃ³n del servidor sea correcta" 
                               Style="{ThemeResource CaptionTextBlockStyle}" 
                               Opacity="0.5" 
                               HorizontalAlignment="Center" 
                               TextWrapping="Wrap" 
                               MaxWidth="300" 
                               TextAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <Page.Resources>
        <!-- Converters -->
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>
</Page>
