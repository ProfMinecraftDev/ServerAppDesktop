<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ServerAppDesktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ServerAppDesktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Server App Desktop (Preview)">

    <!-- ðŸŽ¨ Fondo Mica: Haciendo que las ventanas luzcan elegantes desde WinUI 3 -->
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt" />
    </Window.SystemBackdrop>

    <Grid x:Name="MainLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Barra de tÃ­tulo -->
            <RowDefinition Height="*" />   <!-- Contenido principal -->
        </Grid.RowDefinitions>

        <!-- Barra de tÃ­tulo personalizada porque somos especiales -->
        <Grid
            x:Name="AppTitleBar"
            Margin="12,8"
            VerticalAlignment="Top"
            IsHitTestVisible="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel x:Name="AppTitleBarPanel"  Grid.Row="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Image Source="/Assets/AppIcon.png" Width="30" Height="30" VerticalAlignment="Center" />
                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}"
                       Text="{x:Bind Title, Mode=OneWay}"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap" />
            </StackPanel>
        </Grid>

        <Frame x:Name="MainFrame" Grid.Row="1" /> <!-- Donde ocurre la magia -->
    </Grid>
</Window>
