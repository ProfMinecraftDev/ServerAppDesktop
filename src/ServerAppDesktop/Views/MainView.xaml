<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ServerAppDesktop.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ServerAppDesktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkitExtensions="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <NavigationView
        IsBackButtonVisible="Collapsed"
        IsPaneToggleButtonVisible="False"
        IsSettingsVisible="True"
        ItemInvoked="NavigationView_ItemInvoked"
        PaneDisplayMode="Top"
        SelectionChanged="NavigationView_SelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItem
                x:Uid="HomeNavItem"
                Icon="Home"
                IsSelected="True"
                Tag="Home" />
            <NavigationViewItem
                x:Uid="PerformanceNavItem"
                Icon="{toolkitExtensions:FontIcon Glyph=&#xE9D9;}"
                Tag="Performance" />
            <NavigationViewItem
                x:Uid="TerminalNavItem"
                Icon="{toolkitExtensions:FontIcon Glyph=&#xE756;}"
                Tag="Terminal" />
            <NavigationViewItem
                x:Uid="FilesNavItem"
                Icon="SyncFolder"
                Tag="Files" />
        </NavigationView.MenuItems>
        <NavigationView.FooterMenuItems>
            <NavigationViewItem
                x:Uid="WhatsNewNavItem"
                Icon="{toolkitExtensions:FontIcon Glyph=&#xF133;}"
                Tag="WhatsNew" />
            <NavigationViewItemSeparator />
            <NavigationViewItem
                x:Uid="SystemInfoNavItem"
                Icon="{toolkitExtensions:FontIcon Glyph=&#xE7F4;}"
                Tag="SystemInfo" />
            <NavigationViewItem
                x:Uid="AboutNavItem"
                Icon="{toolkitExtensions:FontIcon Glyph=&#xE946;}"
                Tag="About" />
            <NavigationViewItemSeparator />
        </NavigationView.FooterMenuItems>
        <Frame>
            <StackPanel>
                <TextBlock Margin="36,40,0,36" Style="{StaticResource TitleTextBlockStyle}" />
                <Frame x:Name="contentFrame" />
            </StackPanel>
        </Frame>
    </NavigationView>
</Page>
