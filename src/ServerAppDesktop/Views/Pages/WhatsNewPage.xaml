<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="ServerAppDesktop.Views.Pages.WhatsNewPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:ServerAppDesktop.Views.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkitControls="using:CommunityToolkit.WinUI.Controls"
	NavigationCacheMode="Required"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			x:Uid="Page_WhatsNew_Title"
			Grid.Row="0"
			Style="{StaticResource PageTitleTextBlockStyle}" />
		<ScrollViewer
			Grid.Row="1"
			Padding="36"
			Visibility="Collapsed">
			<toolkitControls:MarkdownTextBlock />
		</ScrollViewer>

		<ScrollViewer Grid.Row="1" Padding="36">
			<Grid HorizontalAlignment="Center" VerticalAlignment="Center">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Image
					Grid.Row="0"
					MaxHeight="300"
					Margin="0,0,0,16"
					HorizontalAlignment="Center"
					Source="/Assets/NoConnected.png" />
				<TextBlock
					x:Uid="WhatsNew_NoInternetTitle"
					Grid.Row="1"
					Style="{StaticResource SubtitleTextBlockStyle}"
					TextAlignment="Center" />
				<TextBlock
					x:Uid="WhatsNew_NoInternetDesc"
					Grid.Row="2"
					Style="{StaticResource BodyTextBlockStyle}"
					TextAlignment="Center" />
				<Button
					x:Uid="RefreshNewsBtn"
					Grid.Row="3"
					Margin="0,16,0,0"
					HorizontalAlignment="Center"
					Style="{StaticResource AccentButtonStyle}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<SymbolIcon Symbol="Refresh" />
						<TextBlock x:Uid="RefreshNewsText" />
					</StackPanel>
				</Button>
			</Grid>
		</ScrollViewer>

		<Grid
			Grid.Row="1"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Visibility="Collapsed">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<ProgressRing
				Grid.Row="0"
				Width="48"
				Height="48"
				Margin="0,0,0,16"
				IsActive="True" />
			<TextBlock
				x:Uid="LoadingNewsText"
				Grid.Row="1"
				Style="{StaticResource SubtitleTextBlockStyle}"
				TextAlignment="Center" />
		</Grid>
	</Grid>
</Page>
