<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="ServerAppDesktop.Views.Pages.AboutPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:ServerAppDesktop.Views.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkitExtensions="using:CommunityToolkit.WinUI"
	NavigationCacheMode="Required"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			x:Uid="Page_About_Title"
			Grid.Row="0"
			Style="{StaticResource PageTitleTextBlockStyle}" />
		<ScrollView Grid.Row="1" Padding="36">
			<StackPanel Spacing="8">
				<Image MaxHeight="200" Source="/Assets/HeroImage.png" />
				<SelectorBar
					HorizontalAlignment="Center"
					SelectionChanged="SelectorBar_SelectionChanged"
					TabIndex="0">
					<SelectorBarItem
						x:Uid="AboutAppItem"
						Icon="{toolkitExtensions:FontIcon Glyph=&#xE946;}"
						IsSelected="True"
						Tag="AboutApp" />
					<SelectorBarItem
						x:Uid="AboutLicensesItem"
						Icon="{toolkitExtensions:FontIcon Glyph=&#xEB95;}"
						Tag="AboutLicenses" />
				</SelectorBar>
				<Frame x:Name="aboutFrame" />
			</StackPanel>
		</ScrollView>
	</Grid>
</Page>
