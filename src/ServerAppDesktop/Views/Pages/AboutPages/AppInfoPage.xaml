<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="ServerAppDesktop.Views.Pages.AboutPages.AppInfoPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	NavigationCacheMode="Required"
	xmlns:local="using:ServerAppDesktop.Views.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkitExtensions="using:CommunityToolkit.WinUI"
	mc:Ignorable="d">

	<StackPanel>
		<TextBlock
			Style="{StaticResource HeaderTextBlockStyle}"
			Text="Server App Desktop"
			TextAlignment="Center" />
		<TextBlock
			Style="{StaticResource SubheaderTextBlockStyle}"
			Text="Versión 1.0.0.3 (Preview)"
			TextAlignment="Center" />
		<TextBlock
			x:Uid="AppDescription1"
			Margin="0,16,0,0"
			TextAlignment="Center"
			TextWrapping="Wrap" />

		<TextBlock
			x:Uid="AppDescription2"
			TextAlignment="Center"
			TextWrapping="Wrap" />

		<TextBlock
			x:Uid="AppDescription3"
			TextAlignment="Center"
			TextWrapping="Wrap" />

		<TextBlock
			x:Uid="AppDescription4"
			TextAlignment="Center"
			TextWrapping="Wrap" />

		<HyperlinkButton
			x:Uid="GitHubLink"
			Margin="0,16,0,0"
			HorizontalAlignment="Center"
			NavigateUri="https://github.com/ProfMinecraftDev/ServerAppDesktop">
			<StackPanel Orientation="Horizontal" Spacing="8">
				<Viewbox Width="16" Height="16">
					<PathIcon Data="{StaticResource GitHubIconPath}" />
				</Viewbox>
				<TextBlock x:Uid="GitHubLinkText" />
			</StackPanel>
		</HyperlinkButton>
	</StackPanel>
</Page>