<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="ServerAppDesktop.Views.Pages.AboutPages.ThirdPartyLicensesPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	NavigationCacheMode="Required"
	xmlns:local="using:ServerAppDesktop.Views.Pages.AboutPages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:models="using:ServerAppDesktop.Models"
	mc:Ignorable="d">

	<StackPanel>
		<TextBlock
			x:Uid="LicensesHeader"
			Style="{StaticResource HeaderTextBlockStyle}"
			TextAlignment="Center" />

		<TextBlock
			x:Uid="LicensesSubheader"
			Style="{StaticResource SubheaderTextBlockStyle}"
			TextAlignment="Center" />
		<ListView Margin="0,16,0,0" SelectionMode="None">
			<ListView.ItemTemplate>
				<DataTemplate x:DataType="models:ThirdPartyLicense">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="2*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<TextBlock
							Grid.Column="0"
							VerticalAlignment="Center"
							FontWeight="SemiBold"
							Text="{x:Bind NameProduct}"
							TextAlignment="Center" />

						<HyperlinkButton
							Grid.Column="1"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Content="{x:Bind LicenseProduct}"
							NavigateUri="{x:Bind LicenseUrl}" />

						<HyperlinkButton
							Grid.Column="2"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Content="{x:Bind OfficialWeb}"
							NavigateUri="{x:Bind Url}" />
					</Grid>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackPanel>
</Page>
