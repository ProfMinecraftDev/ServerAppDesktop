<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="ServerAppDesktop.Views.Pages.TerminalPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:ServerAppDesktop.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:ServerAppDesktop.Views.Pages"
	NavigationCacheMode="Required"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkitExtensions="using:CommunityToolkit.WinUI"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			x:Uid="Page_Terminal_Title"
			Grid.Row="0"
			Style="{StaticResource PageTitleTextBlockStyle}" />
		<Grid Grid.Row="1" Padding="36">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<Border
				Grid.Row="0"
				Background="{ThemeResource ControlFillColorDefaultBrush}"
				BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
				BorderThickness="1,1,1,0"
				CornerRadius="4,4,0,0">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Grid
						Grid.Row="0"
						Padding="16,0"
						BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
						BorderThickness="0,0,0,1">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>

						<TextBlock
							x:Uid="OutputTitle"
							Grid.Column="0"
							VerticalAlignment="Center"
							Style="{StaticResource SubtitleTextBlockStyle}" />

						<CommandBar
							Grid.Column="1"
							VerticalAlignment="Center"
							DefaultLabelPosition="Right">
							<AppBarButton x:Uid="CopyOutputBtn" Icon="Copy" />
							<AppBarButton x:Uid="ClearOutputBtn" Icon="Clear" />
						</CommandBar>
					</Grid>

					<ScrollViewer
						Grid.Row="1"
						Margin="12,12,12,0"
						HorizontalScrollBarVisibility="Auto"
						HorizontalScrollMode="Enabled"
						VerticalScrollBarVisibility="Auto"
						VerticalScrollMode="Enabled">
						<TextBlock FontFamily="Cascadia Code, Consolas, Courrier New, Lucida Console, monospace" IsTextSelectionEnabled="True" />
					</ScrollViewer>
				</Grid>
			</Border>

			<Border
				Grid.Row="1"
				Padding="16"
				Background="{ThemeResource ControlFillColorDefaultBrush}"
				BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
				BorderThickness="1,0,1,1"
				CornerRadius="0,0,4,4">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<TextBox
						x:Uid="CommandInput"
						Grid.Column="0"
						VerticalAlignment="Center"
						Background="Transparent"
						BorderThickness="0" />

					<Button
						x:Uid="SendCommandBtn"
						Grid.Column="1"
						Margin="8,0,0,0"
						VerticalAlignment="Center"
						Style="{StaticResource AccentButtonStyle}">
						<StackPanel Orientation="Horizontal" Spacing="8">
							<SymbolIcon Symbol="Send" />
							<TextBlock x:Uid="SendCommandText" />
						</StackPanel>
					</Button>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</Page>
