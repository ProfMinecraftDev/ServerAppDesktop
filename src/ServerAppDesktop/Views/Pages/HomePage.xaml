<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="ServerAppDesktop.Views.Pages.HomePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:ServerAppDesktop.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:ServerAppDesktop.Views.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkitExtensions="using:CommunityToolkit.WinUI"
	NavigationCacheMode="Required"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBlock
			x:Uid="Page_Home_Title"
			Grid.Row="0"
			Margin="36,40,36,0"
			Style="{StaticResource PageTitleTextBlockStyle}" />

		<Grid Grid.Row="1" Padding="36">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<StackPanel
				Grid.Row="0"
				HorizontalAlignment="Center"
				Orientation="Horizontal"
				Spacing="12">
				<Button
					x:Uid="StartServerButton"
					Command="{x:Bind ViewModel.StartServerCommand}"
					IsEnabled="{x:Bind ViewModel.CanStartServer, Mode=OneWay}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<SymbolIcon Symbol="Play" />
						<TextBlock x:Uid="StartServerText" />
					</StackPanel>
				</Button>
				<Button
					x:Uid="StopServerButton"
					Command="{x:Bind ViewModel.StopServerCommand}"
					IsEnabled="{x:Bind ViewModel.CanStopServer, Mode=OneWay}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<SymbolIcon Symbol="Stop" />
						<TextBlock x:Uid="StopServerText" />
					</StackPanel>
				</Button>
				<Button
					x:Uid="RestartServerButton"
					Command="{x:Bind ViewModel.RestartServerCommand}"
					IsEnabled="{x:Bind ViewModel.CanRestartServer, Mode=OneWay}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<SymbolIcon Symbol="Refresh" />
						<TextBlock x:Uid="RestartServerText" />
					</StackPanel>
				</Button>
			</StackPanel>

			<ScrollViewer
				Grid.Row="1"
				MaxWidth="1200"
				Margin="0,36,0,0">

				<Grid
					ChildrenTransitions="{StaticResource DefaultLayoutTransitions}"
					ColumnSpacing="16"
					RowSpacing="16">

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<controls:InfoCard
						x:Uid="ServerEditionCard"
						Grid.Row="0"
						Grid.Column="0"
						Description="{x:Bind ViewModel.ServerEdition, Mode=OneWay}"
						Icon="{toolkitExtensions:FontIcon Glyph=&#xE7FC;}" />

					<controls:InfoCard
						x:Uid="ServerVersionCard"
						Grid.Row="0"
						Grid.Column="1"
						Description="{x:Bind ViewModel.ServerVersion, Mode=OneWay}"
						Icon="{toolkitExtensions:FontIcon Glyph=&#xE74C;}" />

					<controls:InfoCard
						x:Uid="ServerPathCard"
						Grid.Row="1"
						Grid.Column="0"
						Description="{x:Bind ViewModel.ServerPath, Mode=OneWay}"
						Icon="{toolkitExtensions:SymbolIcon Symbol=SyncFolder}" />

					<controls:InfoCard
						x:Uid="ServerExecutableCard"
						Grid.Row="1"
						Grid.Column="1"
						Description="{x:Bind ViewModel.ServerExecutable, Mode=OneWay}"
						Icon="{toolkitExtensions:FontIcon Glyph=&#xE943;}" />

					<controls:SquareCard
						x:Uid="ServerIPCard"
						Grid.Row="2"
						Grid.Column="0"
						Description="{x:Bind ViewModel.ServerIP, Mode=OneWay}"
						Icon="{toolkitExtensions:FontIcon Glyph=&#xE88A;}"
						Subtitle="{x:Bind ViewModel.ServerIPType, Mode=OneWay}" />

					<controls:SquareCard
						x:Uid="ServerPortCard"
						Grid.Row="2"
						Grid.Column="1"
						Description="{x:Bind ViewModel.ServerPort, Mode=OneWay}"
						Icon="{toolkitExtensions:FontIcon Glyph=&#xEC27;}"
						Subtitle="{x:Bind ViewModel.ServerPortType, Mode=OneWay}" />

					<controls:InfoCard
						x:Uid="ActiveWorldCard"
						Grid.Row="3"
						Grid.ColumnSpan="2"
						Description="{x:Bind ViewModel.ActiveWorld, Mode=OneWay}"
						Icon="{toolkitExtensions:FontIcon Glyph=&#xE909;}" />
				</Grid>
			</ScrollViewer>
		</Grid>
	</Grid>
</Page>